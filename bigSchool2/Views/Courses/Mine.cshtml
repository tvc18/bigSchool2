@model IEnumerable<bigSchool2.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.LecturerId
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>

                </div>
                <div class="action">
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = course.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = course.Id })
                    </td>
                </div>

            </li>
        }
    </ul>
</div>
